<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:padding="16dp"
    android:background="#c2c5db"> <!-- Changed background color to #c2c5db -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Header with Back Button and Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_back" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Track Order"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#6153b7" /> <!-- Changed text color to #6153b7 -->

            <ImageView
                android:id="@+id/helpIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_help" />
        </LinearLayout>

        <!-- Order Details Section -->
        <TextView
            android:id="@+id/orderNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order #123456789"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:textColor="#f047f3" /> <!-- Changed text color to #f047f3 -->

        <TextView
            android:id="@+id/orderDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Placed on: Sept 20, 2024"
            android:textSize="14sp"
            android:textColor="#3b3c4a" /> <!-- Changed text color to #3b3c4a -->

        <!-- Progress Tracker -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="16dp"
            android:gravity="center"
            android:weightSum="5">

            <!-- Order Confirmed -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_check" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Confirmed"
                    android:textSize="12sp"
                    android:textColor="#6153b7" /> <!-- Changed text color to #6153b7 -->
            </LinearLayout>

            <!-- Order Processed -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_check_gray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Processed"
                    android:textSize="12sp"
                    android:textColor="#e6dc6a" /> <!-- Changed text color to #e6dc6a -->
            </LinearLayout>

            <!-- Shipped -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_check_gray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shipped"
                    android:textSize="12sp"
                    android:textColor="#e6dc6a" /> <!-- Changed text color to #e6dc6a -->
            </LinearLayout>

            <!-- Out for Delivery -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_check_gray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Out for Delivery"
                    android:textSize="12sp"
                    android:textColor="#e6dc6a" /> <!-- Changed text color to #e6dc6a -->
            </LinearLayout>

            <!-- Delivered -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_check_gray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delivered"
                    android:textSize="12sp"
                    android:textColor="#e6dc6a" /> <!-- Changed text color to #e6dc6a -->
            </LinearLayout>
        </LinearLayout>

        <!-- Order Items Section -->
        <TextView
            android:id="@+id/itemsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Items:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:textColor="#6153b7" /> <!-- Changed text color to #6153b7 -->

        <!-- Sample Item (Repeat for each item) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <ImageView
                android:id="@+id/itemImage"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_sample_item" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <TextView
                    android:id="@+id/itemName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Product Name"
                    android:textSize="14sp"
                    android:textColor="#f047f3" /> <!-- Changed text color to #f047f3 -->

                <TextView
                    android:id="@+id/itemQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Qty: 1"
                    android:textSize="14sp"
                    android:textColor="#3b3c4a" /> <!-- Changed text color to #3b3c4a -->
            </LinearLayout>

            <TextView
                android:id="@+id/itemPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$50"
                android:textSize="14sp"
                android:textColor="#3b3c4a" /> <!-- Changed text color to #3b3c4a -->
        </LinearLayout>

        <!-- Shipping Address Section -->
        <TextView
            android:id="@+id/shippingAddressTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shipping Address:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:textColor="#6153b7" /> <!-- Changed text color to #6153b7 -->

        <TextView
            android:id="@+id/shippingAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="John Doe, 123 Main St, New York, NY 10001"
            android:textSize="14sp"
            android:textColor="#3b3c4a" /> <!-- Changed text color to #3b3c4a -->

        <!-- Carrier Information -->
        <TextView
            android:id="@+id/carrierInfoTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Carrier:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:textColor="#6153b7" /> <!-- Changed text color to #6153b7 -->

        <TextView
            android:id="@+id/carrierInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UPS, Tracking #1Z9999999999999999"
            android:textSize="14sp"
            android:textColor="#3b3c4a" /> <!-- Changed text color to #3b3c4a -->
    </LinearLayout>
</ScrollView>
