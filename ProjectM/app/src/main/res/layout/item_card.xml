<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@android:color/transparent"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    android:id="@+id/card">

    <RelativeLayout
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:background="#FAFAFAFA"
        android:padding="8dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/isearchmageView"
            android:layout_width="148dp"
            android:layout_height="157dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            android:src="@drawable/ring1"
            app:shapeAppearanceOverlay="@style/CustomCircularImage" />

        <androidx.cardview.widget.CardView
            android:layout_width="282dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/isearchmageView"
            android:layout_marginTop="-11dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/searchtitleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/isearchmageView"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/zilla_slab_semibold"
                    android:text="Fee Gilter Diamond"
                    android:textColor="#484848"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/searchtitleTextView"
                    android:layout_alignParentStart="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/priceTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="â‚¹ 38,516"
                        android:textColor="#484848"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        />

                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</androidx.cardview.widget.CardView>