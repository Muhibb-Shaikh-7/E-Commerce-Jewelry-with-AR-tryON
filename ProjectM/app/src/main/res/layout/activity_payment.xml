<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Product Name -->
    <TextView
        android:id="@+id/product_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product Name:"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/product_name_label"
        android:layout_alignBaseline="@id/product_name_label"
        android:layout_marginStart="8dp"
        android:text="Example Product"
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp" />

    <!-- Subtotal -->
    <TextView
        android:id="@+id/subtotal_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_name_label"
        android:text="Subtotal:"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/subtotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/subtotal_label"
        android:layout_alignBaseline="@id/subtotal_label"
        android:layout_marginStart="8dp"
        android:text="₹100.00"
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp" />

    <!-- Tax -->
    <TextView
        android:id="@+id/tax_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/subtotal_label"
        android:text="Tax:"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/tax_label"
        android:layout_alignBaseline="@id/tax_label"
        android:layout_marginStart="8dp"
        android:text="₹18.00"
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp" />

    <!-- Delivery Charges -->
    <TextView
        android:id="@+id/delivery_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tax_label"
        android:text="Delivery:"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/delivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/delivery_label"
        android:layout_alignBaseline="@id/delivery_label"
        android:layout_marginStart="8dp"
        android:text="₹50.00"
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp" />

    <!-- Total Amount -->
    <TextView
        android:id="@+id/total_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/delivery_label"
        android:text="Total:"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/total_label"
        android:layout_alignBaseline="@id/total_label"
        android:layout_marginStart="8dp"
        android:text="₹168.00"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Pay Button -->
    <Button
        android:id="@+id/pay_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/total_label"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Pay Now"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/colorPrimary" />
</RelativeLayout>
