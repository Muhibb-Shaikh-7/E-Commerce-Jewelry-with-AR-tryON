<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Drop Shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#C5C2C2"/> <!-- Shadow color -->
            <padding
                android:left="0dp"
            android:right="0dp"
            android:top="1dp"
            android:bottom="0.5dp" />
        </shape>
    </item>
    <!-- Border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Border color -->
            <!-- You can add stroke here if needed -->
            <stroke
                android:width="1dp"
                android:color="@color/light_gray" /> <!-- Border color and width -->
        </shape>
    </item>
</layer-list>
