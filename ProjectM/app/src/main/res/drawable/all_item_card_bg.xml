<!-- gradient_stroke_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer layer for gradient stroke -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/light_gray"
                android:centerColor="@color/dark_golden"
                android:endColor="@color/light_gray"
                android:angle="90"/>
            <corners android:radius="16dp"/>
        </shape>
    </item>

    <!-- Inner layer for the solid background -->
    <item android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/offwhite"/>
            <corners android:radius="16dp"/>
        </shape>
    </item>

</layer-list>
