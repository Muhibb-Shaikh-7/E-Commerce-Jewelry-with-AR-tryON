<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#F8DF5C"
                android:centerColor="#927417"
                android:endColor="#FDE564"
                android:angle="45"/>
            <corners android:radius="410dp" />
        </shape>
    </item>

    <item android:left="2dp" android:right="2dp" android:bottom="2dp" android:top="2dp" >
        <shape android:shape="rectangle">
            <solid android:color="@color/iron_stone" /> <!-- Original color -->
            <corners android:radius="410dp" />
        </shape>
    </item>
</layer-list>
